    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.0",
    "koa-onerror": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "mysql2": "^3.10.2",
    "sequelize": "^6.37.3",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.7.0",
    "eslint-plugin-prettier": "^5.1.3",
